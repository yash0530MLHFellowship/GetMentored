<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/admin/register" method="POST">
                <div class="heading-2 text-center mt-3">ADMIN REGISTER</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="password">Password</label>
                    <input type="password" class="form-control" id="password1" placeholder="Enter password" name="password1">
                    <label class="required" for="password">Confirm Password</label>
                    <input type="password" class="form-control mt-3" id="password2" placeholder="Confirm password" name="password2">
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Register</button>
                <a href="/admin/login" class="btn btn-outline-danger mr-2 pl-4 pr-4 ">Login</a>
            </form>
        </div>
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
    </div>
</div>

<% include ../layouts/footer %>