<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/admin/login" method="POST">
                <div class="heading-2 text-center mt-3">ADMIN LOGIN</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                </div>
                <div class="form-group">
                    <label class="required" for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Login</button>
                <a href="/admin/register" class="btn btn-outline-danger mr-2 pl-4 pr-4 ">Register</a>
            </form>
        </div>
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
    </div>
</div>

<% include ../layouts/footer %>